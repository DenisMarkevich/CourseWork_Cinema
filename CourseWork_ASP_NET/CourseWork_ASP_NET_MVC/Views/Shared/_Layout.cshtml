<!DOCTYPE html>
<html>
<head>
    <!--CSS-->
    <link href="~/Content/StylesheetForMainHeader.css" rel="stylesheet" />
    <link href='https://fonts.googleapis.com/css?family=Dosis:600' rel='stylesheet' type='text/css'>


    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <header class="MainHeader">
        <div class="HeaderDiv">
            <div class="LeftDivInHeaderDiv">

            </div>
            <div class="CenterDivInHeaderDiv" style="text-align:center">
                <div class="TopDivInCenterDivInHeader">
                    <h1 id="neon-tubing">C  I  N  E  M  A</h1>
                </div>
                <div class="BottomDivInCenterDivInHeader">
                    <div class="AdditionalDivInBottomDiv"></div>
                    <div class="MainDivInBottomDiv">
                        <p class="p_in_header"><b>ФІЛЬМИ</b></p>
                    </div>
                    <div class="MainDivInBottomDiv">
                        <p class="p_in_header"><b>РОЗКЛАД</b></p>
                    </div>
                    <div class="MainDivInBottomDiv">
                        <p class="p_in_header"><b>КІНОЗАЛИ</b></p>
                    </div>
                    <div class="AdditionalDivInBottomDiv"></div>
                </div>
            </div>
            <div class="RightDivInHeaderDiv">

            </div>
        </div>
        <div class="CarouselDiv">

        </div>
    </header>

    <div class="container body-content">
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

<body>
    <div class="CarouselDiv">
        <div class="DivInCarouselDiv"></div>
        <div class="Carousel">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="6"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active" style="text-align:center">
                        <div id="card-wrapper">
                            <div id="card-front" class="card">
                                <img src="~/Images/Carousel/deadpool.jpg" />
                            </div>
                            <div id="card-back" class="card">
                                <div class="main_div_info">
                                    <div class="title">
                                        <b>Дедпул</b>
                                    </div>
                                    <div class="mini_title">
                                        <b>Deadpool</b>
                                    </div>
                                    <div class="date">
                                        <b>Дата:</b> 10/05 - 14/05
                                    </div>
                                    <div class="time">
                                        <b>Час:</b> 104хв. / 1:44
                                    </div>
                                    <div class="genre">
                                        <b>Жанр:</b> фантастика, бойовик, трилер, пригоди
                                    </div>
                                    <div class="in_roles">
                                        <b>В ролях:</b> Раян Рейнольдс, Джина Карано, Ед Скрейн та ін.
                                    </div>
                                    <div class="book">
                                        <button type="button" class="btn btn-secondary">Забронювати</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item" style="text-align:center">
                        <img src="~/Images/Carousel/soulOfCompany.jpg" />
                    </div>
                    <div class="carousel-item" style="text-align:center">
                        <img src="~/Images/Carousel/terminal.jpg" />
                    </div>
                    <div class="carousel-item" style="text-align:center">
                        <img src="~/Images/Carousel/motherFatherGus.jpg" />
                    </div>
                    <div class="carousel-item" style="text-align:center">
                        <img src="~/Images/Carousel/birdsAdventure.jpg" />
                    </div>
                    <div class="carousel-item" style="text-align:center">
                        <img src="~/Images/Carousel/avengers.jpg" />
                    </div>
                    <div class="carousel-item" style="text-align:center">
                        <img src="~/Images/Carousel/taxi5.jpg" />
                    </div>

                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="DivInCarouselDiv"></div>

    </div>
